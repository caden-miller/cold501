<main class="container">
  <header class="header">
    <% if merchandise.persisted? %>
      <h1 class="header-title">Edit Merchandise</h1>
    <% else %>
      <h1 class="header-title">New Merchandise</h1>
    <% end %>
    <div class="back">
      <%= link_to "← Back to Merchandise", merchandises_path, class: "btn btn--secondary" %>
    </div>
  </header>

  <div class="new-wrapper">
    <%= form_with(model: merchandise, local: true) do |form| %>

      <!-- Error Display Section -->
      <% if merchandise.errors.any? %>
        <div class="error-messages" style="color: red; margin-bottom: 20px;">
          <h2><%= pluralize(merchandise.errors.count, "error") %> prohibited this merchandise from being saved:</h2>
          <ul>
            <% merchandise.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Form Fields -->
      <div class="form-group">
        <%= form.label :link, "Link", style: "display: block" %>
        <%= form.text_field :link, class: 'item-link new-link' %>
      </div>

      <div class="form-group">
        <%= form.label :title, "Title", style: "display: block" %>
        <%= form.text_field :title, class: 'item-title new-title' %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Description", style: "display: block" %>
        <%= form.text_area :description, class: 'idea-desc new-desc' %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit", class: 'btn btn--primary' %>
      </div>
    <% end %>
  </div>
</main>
