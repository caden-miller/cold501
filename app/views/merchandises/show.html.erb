<main class="container">
  <p style="color: green"><%= notice %></p>
  <header class="header">
    <h1 class="header">SHOWING MERCHANDISE</h1>
  </header>

  <%= render @merchandise %>

  <div>
    <% if @role == "admin" %>
      <%= link_to "Edit this merchandise", edit_merchandise_path(@merchandise) %> 
      <%= button_to "Destroy this merchandise", @merchandise, method: :delete %>
    <% end %>
    <%= link_to "Back to merchandises", merchandises_path %>
  </div>
</main>
