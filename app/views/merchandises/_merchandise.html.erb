<div id="<%= dom_id merchandise %>">
  

  <h1>
    <%= merchandise.title %>
  </h1>
  
  <p>
     <%= image_tag(merchandise.image) if merchandise.link.present? &&  merchandise.image.present? %>
  </p>

  <p>
    <%= merchandise.description %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= merchandise.stock %>
  </p>
  
  <p>
    <strong>Link:</strong>
    <%= link_to merchandise.link, merchandise.link, target: '_blank' if merchandise.link.present? %>
  </p>

</div>
