<main class="container">
  <header class="header">
    <h1 class="header-title">Merchandise</h1>
    <% if current_user.role == "officer" %>
      <%= link_to "New Merchandise", new_merchandise_path, class: "button-link header-button" %>
    <% end %>
  </header>

  <div id="merchandises" class="merch-list">
    <% @merchandises.each do |merchandise| %>
      <div class="merch-item">
        <!-- Content for the merchandise item -->
        <%= render merchandise %>

        <% if current_user.role == "officer" %>
          <%= link_to "Edit", edit_merchandise_path(merchandise), class: "edit-button" %>
          <%= link_to "Delete", "#", data: { modal_id: "delete-confirmation-modal-#{merchandise.id}" }, onclick: "showModal('delete-confirmation-modal-#{merchandise.id}')" %>

          <div id="delete-confirmation-modal-<%= merchandise.id %>" class="modal-overlay hidden">
            <div class="modal-content">
              <p>Are you sure you want to delete this merchandise item?</p>
              <%= button_to "Delete", merchandise_path(merchandise), method: :delete, data: { turbo: false }, class: "confirm-delete-button" %>
              <button class="cancel-button" onclick="closeModal('delete-confirmation-modal-<%= merchandise.id %>')">Cancel</button>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</main>

<script>
  function showModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.remove('hidden');
    }
  }

  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.add('hidden');
    }
  }
</script>



