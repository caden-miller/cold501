<main class="container">
  <header class="header">
    <h1>LINKS</h1>
  </header>
  <% if @role == "admin" %>
    <%= link_to "New Link", new_link_path, class: 'btn btn--primary', data: { turbo_frame: dom_id(Link.new) } %><br><br>
  <% end %>

  <div class="link__table">
    <div class="link__table-header">
      <div class="link__table-row">
        <div class="link__table-cell">Link</div>
        <% if @role == "admin" %>
          <div class="link__table-cell">Actions</div>
        <% end %>
      </div>
    </div>
    <div class="link__table-body" id="links">
      <% @links.each do |link| %>
        <%= turbo_frame_tag dom_id(link) do %>
          <%= render partial: 'link', locals: { link: link } %>
        <% end %>
      <% end %>
      <%= turbo_frame_tag dom_id(Link.new) %>
    </div>
  </div>
</main>
