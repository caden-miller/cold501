<main class="container">
  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>

  <% if user_signed_in? %>
    <h2>Hello, <%= @user.full_name %> </h2>
    <h2>Your current role is: <%= @user.role %> </h2>
    <h3>You have access to these pages: </h3>
    <ul class="stack">
      <% if @role == 'admin' %>
        <li><%= link_to sanitize("Users"), users_path, class: 'btn btn--light' %> </li>
      <% end %>
      <li><%= link_to sanitize("Leaderboard"), leaderboard_users_path, class: 'btn btn--light' %> </li>
      <li><%= link_to sanitize('View All Events'), events_path, class: 'btn btn-primary' %></li>
      <!-- TODO: ADD MORE LINKS HERE -->
    </ul>

    <%= link_to sanitize("Sign out"), destroy_user_session_path, class: 'btn btn--light' %>
  <% else %>
    <p>Please log in.</p>
    <%= link_to sanitize("Log in"), new_user_session_path, class: 'btn btn--light' %>
  <% end %>
</main>

