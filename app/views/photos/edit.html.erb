<%= turbo_frame_tag "modal" do %>
  <div class= "modal">
    <h1>Editing photo</h1>

    <%= render "form", photo: @photo %>

    <br>

    <div>
      <%= link_to "Show this photo", @photo %> |
      <%= link_to "Cancel", "#", data: {
            controller: "modals", 
            action: "modals#close"
          }, class: "modal__cancel-button" %>
    </div>
  </div>
<% end %>
