<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :start_time, "Event Start Time" %><br>
    <%= form.datetime_select :start_time, include_seconds: false %> 
  </div>

  <div>
    <%= form.label :end_time, "Event End Time" %><br>
    <%= form.datetime_select :end_time, include_seconds: false %> 
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </div>


  <% if current_user.role == "admin" %>
  <div>
    <%= form.label :passcode, "Attendance Passcode" %><br>
    <%= form.text_field :passcode %>
  </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
