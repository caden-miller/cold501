<%= form_with(model: @event, local: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "Event Start Time" %><br>
    <%= form.datetime_select :start_time, include_seconds: false, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <%= form.label :end_time, "Event End Time" %><br>
    <%= form.datetime_select :end_time, include_seconds: false, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <%= form.label :location %><br>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <% if current_user.role == "admin" %>
    <div class="form-group">
      <%= form.label :passcode, "Attendance Passcode" %><br>
      <%= form.text_field :passcode, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Event", class: 'btn btn--primary' %>
  </div>
<% end %>
