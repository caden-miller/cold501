<main class="container">
  <%= link_to("Back to List", events_path, class: 'back-link') %>
  <div class="events delete">
    <h2>Delete Event</h2>

    <%= form_for(@event, url: event_path(@event), method: :post) do |f| %>
      <%= hidden_field_tag :_method, 'delete' %>
      <p>Are you sure you want to permanently delete this event?</p>
      <p><%= @event.name %></p>

      <div class="form-buttons">
          <%= f.submit("Delete Event") %>
      </div>
    <% end %>
  </div>
</main>

