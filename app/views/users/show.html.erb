<main class="container">
  <%= link_to sanitize("&larr; Back to users"), users_path %>
  <div class="header">
    <h1>
      <%= @user.full_name %>
    </h1>
  </div>
  <div class="user__info">
    <img src="<%= @user.avatar_url %>" alt="User Avatar" class="user__avatar" />
    
      <div class="user__stack">
        <div class="user__item">
          <h2>
            Role:
          </h2>
          <a>
            <%= @user.role %>
          </a>
        </div>
        <div class="user__item">
          <h2>
            Committee:
          </h2>
          <a>
            <%= @user.committee %>
          </a>
        </div>
      </div>
      <div class="user__stack">
        <div class="user__item">
          <h2>
            Points:
          </h2>
          <a>
            <%= @user.points %>
          </a>
        </div>
        <div class="user__item">
          <h2>
            Dues:
          </h2>
          <a>
            <%= @user.dues %>
          </a>
        </div>
      </div>
    
  </div>
  <div class="user__actions">
    <%= link_to sanitize("Edit"), edit_user_path(@user), class: "btn btn--secondary" %>
    <%= link_to sanitize("Delete"), user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--danger" %>
  </div>
</main>
