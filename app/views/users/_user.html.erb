<!-- app/views/users/_user.html.erb -->
<%= turbo_frame_tag "user_#{user.id}" do %>
  <div class="table-row">
    <div class="table-cell user-cell"><%= image_tag user.avatar_url, class: 'table-image' %></div>
    <div class="table-cell user-cell"><%= user.full_name %></div>
    <div class="table-cell user-cell"><%= user.committee %></div>
    <div class="table-cell user-cell"><%= user.dues %></div>
    <div class="table-cell user-cell"><%= user.points %></div>
    <div class="table-cell user-cell role-<%= user.role %>"><%= user.role %></div>
    <div class="table-cell user-cell actions">
      <%= link_to edit_user_path(user), class: 'table-button edit', data: { turbo_frame: "user_#{user.id}" } do %>
        <%= image_tag 'pencil-svgrepo-com.svg', class: 'user__table-svg', alt: 'Edit User', width: '20', height: '40' %>
      <% end %>
      <%= link_to user_path(user), class: 'table-button trash', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
        <%= image_tag 'trash-blank-svgrepo-com.svg', class: 'user__table-svg', alt: 'Delete User', width: '20', height: '40' %>
      <% end %>
    </div>
  </div>
<% end %>
