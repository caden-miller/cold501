<div class="user" id="<%= dom_id user %>">
  <!-- Avatar Image -->
    <div class="avatar">
      <img src="<%= user.avatar_url %>" alt="<%= user.full_name %>'s Avatar" />
    </div>

    <%= link_to user.full_name, user_path(user) %>
    <div class="user__actions">
      <%= button_to "Delete",
                    user_path(user),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_user_path(user),
                  class: "btn btn--light" %>
    </div>
</div>
