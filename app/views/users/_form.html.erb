<%= form_with(model: user, data: { controller: "form" }) do |form| %>
  <% if user.errors.any? %>
    <div class="modal__error-header">
      <h3 class="modal__error-title">Please fix the following errors:</h3>
      <ul class="modal__error-list">
        <% user.errors.full_messages.each do |message| %>
          <li class="modal__error-item"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form fields -->
  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :role %>
    <%= form.select :role, User::ROLES, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :committee %>
    <%= form.text_field :committee, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :dues %>
    <%= form.number_field :dues, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :points %>
    <%= form.number_field :points, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
