<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :full_name, style: "display: block" %>
    <%= form.text_field :full_name %>
  </div>

  <!-- Maybe add a way to change avatar later -->

  <div>
    <%= form.label :role, style: 'display: block' %>
    <%= form.select :role, options_for_select([['Admin', 'admin'], ['Officer', 'officer'], ['User', 'user']], selected: @user.role) %>
  </div>

  <div>
    <%= form.label :committee, style: "display: block" %>
    <%= form.text_field :committee %>
  </div>

  <div>
    <%= form.label :points, style: "display: block" %>
    <%= form.number_field :points %>
  </div>

  <div>
    <%= form.label :dues, style: "display: block" %>
    <%= form.number_field :dues %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
