<div id="<%= dom_id idea %>" class="idea-wrapper">
  <p class="item-title">
    <%= idea.title %>
  </p>

  <textarea class="idea-desc">
    <%= h(idea.description.squish) %>
  </textarea>

  <div class="idea-footer">
  <p>
    <strong>Created by:</strong>
    <%= idea.created_by %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= idea.created_at %>
  </p>
  </div>

</div>
