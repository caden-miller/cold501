<%= turbo_frame_tag dom_id(leaderboard_category) do %>
  <%= simple_form_for leaderboard_category, html: { class: "link form", data: { turbo: false }, multipart: true } do |form| %>
    <% if leaderboard_category.errors.any? %>
      <div class="error_explanation">
        <h2><%= pluralize(leaderboard_category.errors.count, "error") %> prohibited this leaderboard category from being saved:</h2>
        <ul>
          <% leaderboard_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="table-row">
      <div class="table-cell">
        <%= form.input :category_name %>
      </div>
      <div class="table-cell">
        <%= form.input :min_points %>
      </div>
      <div class="table-cell">
        <%= form.color_field :color %>
      </div>
      <div class="table-cell actions">
        <%= button_tag(type: 'submit', class: 'table-button confirm') do %>
          <%= image_tag 'check-svgrepo-com.svg', class: 'table-button-svg', alt: 'Save link', width: '40', height: '40' %>
        <% end %>
        <%= link_to leaderboard_categories_path, class: 'table-button cancel' do %>
          <%= image_tag 'cancel-close-delete-svgrepo-com.svg', class: 'table-button-svg', alt: 'Back to links', width: '40', height: '40' %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
