<main class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @leaderboard_category %>

  <div>
    <% if @role == 'admin' %>
      <%= link_to "Edit this leaderboard category", edit_leaderboard_category_path(@leaderboard_category) %>
      <%= button_to "Destroy this leaderboard category", @leaderboard_category, method: :delete %>
    <% end %>
    <%= link_to "Back to leaderboard categories", leaderboard_categories_path %>    
  </div>
</main>